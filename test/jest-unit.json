{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "roots": [
    "<rootDir>/src",
    "<rootDir>/test"
  ],
  "testRegex": "src/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.(t|j)s",
    "!<rootDir>/src/**/*.spec.(t|j)s",
    "!<rootDir>/src/migrations/*"
  ],
  "coverageDirectory": "<rootDir>/unit_coverage"
}